<%= form_with(model: list, local: true) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <label>Select categories for this list: </label>
  <%= form.collection_check_boxes(:category_ids, Category.all, :id, :title, {prompt: "Choose a category" }) %><br> 
  <br>
  <label>Select additional user for this list (limit one additional to yourself)</label>
  <%= form.collection_select(:user_ids, User.all, :id, :email, :include_blank => 'none') %><br> 

  <%= form.label :title %>
  <%= form.text_field :title %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
